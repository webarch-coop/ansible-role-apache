# {{ ansible_managed }}

# Expires Forever
<IfModule expires_module>
  # Based on the list here
  # https://w3reign.com/list-common-file-types-mime-types-expire-headers/
  ExpiresActive on
  # DATA
  ExpiresByType text/xml                            "access plus 20 years"
  ExpiresByType text/html                           "access plus 20 years"
  ExpiresByType text/plain                          "access plus 20 years"
  ExpiresByType application/xml                     "access plus 20 years"
  ExpiresByType application/json                    "access plus 20 years"
  ExpiresByType application/rss+xml                 "access plus 20 years"
  ExpiresByType application/atom+xml                "access plus 20 years"
  ExpiresByType text/x-component                    "access plus 20 years"
  # MANIFEST
  ExpiresByType application/x-web-app-manifest+json "access plus 20 years"
  ExpiresByType text/cache-manifest                 "access plus 20 years"
  # SCRIPTS
  ExpiresByType text/css                            "access plus 20 years"
  ExpiresByType text/javascript                     "access plus 20 years"
  ExpiresByType application/javascript              "access plus 20 years"
  ExpiresByType application/ecmascript              "access plus 20 years"
  ExpiresByType application/x-javascript            "access plus 20 years"
  # IMAGES
  ExpiresByType image/gif                           "access plus 20 years"
  ExpiresByType image/png                           "access plus 20 years"
  ExpiresByType image/jpe                           "access plus 20 years"
  ExpiresByType image/jpg                           "access plus 20 years"
  ExpiresByType image/jpeg                          "access plus 20 years"
  ExpiresByType image/jp2                           "access plus 20 years"
  ExpiresByType image/pipeg                         "access plus 20 years"
  ExpiresByType image/bmp                           "access plus 20 years"
  ExpiresByType image/tiff                          "access plus 20 years"
  ExpiresByType image/svg+xml                       "access plus 20 years"
  ExpiresByType image/vnd.microsoft.icon            "access plus 20 years"
  # ICONS
  ExpiresByType image/ico                           "access plus 20 years"
  ExpiresByType image/icon                          "access plus 20 years"
  ExpiresByType text/ico                            "access plus 20 years"
  ExpiresByType image/x-ico                         "access plus 20 years"
  ExpiresByType image/x-icon                        "access plus 20 years"
  ExpiresByType application/ico                     "access plus 20 years"
  # AUDIO
  ExpiresByType audio/ogg                           "access plus 20 years"
  ExpiresByType audio/basic                         "access plus 20 years"
  ExpiresByType audio/mid                           "access plus 20 years"
  ExpiresByType audio/midi                          "access plus 20 years"
  ExpiresByType audio/mpeg                          "access plus 20 years"
  ExpiresByType audio/x-aiff                        "access plus 20 years"
  ExpiresByType audio/x-mpegurl                     "access plus 20 years"
  ExpiresByType audio/x-pn-realaudio                "access plus 20 years"
  ExpiresByType audio/x-wav                         "access plus 20 years"
  # VIDEO
  ExpiresByType video/ogg                           "access plus 20 years"
  ExpiresByType video/mp4                           "access plus 20 years"
  ExpiresByType video/webm                          "access plus 20 years"
  ExpiresByType video/x-msvideo                     "access plus 20 years"
  ExpiresByType video/mpeg                          "access plus 20 years"
  ExpiresByType video/quicktime                     "access plus 20 years"
  ExpiresByType video/x-la-asf                      "access plus 20 years"
  ExpiresByType video/x-ms-asf                      "access plus 20 years"
  ExpiresByType x-world/x-vrml                      "access plus 20 years"
  # FONTS
  ExpiresByType font/truetype                       "access plus 20 years"
  ExpiresByType font/opentype                       "access plus 20 years"
  ExpiresByType application/x-font-ttf              "access plus 20 years"
  ExpiresByType application/x-font-woff             "access plus 20 years"
  ExpiresByType application/font-woff               "access plus 20 years"
  ExpiresByType application/vnd.ms-fontobject       "access plus 20 years"
  # FLASH
  ExpiresByType application/x-shockwave-flash       "access plus 20 years"
  ExpiresByType video/x-flv                         "access plus 20 years"
  # OTHERS
  ExpiresByType application/pdf                     "access plus 20 years"
  ExpiresByType image/vnd.wap.wbmp                  "access plus 20 years"
  ExpiresByType application/vnd.wap.wbxml           "access plus 20 years"
</IfModule>

